<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="au.com.fujitsu.walkbuddies.AddChild_MB"
    android:background="@color/colorBackColour">

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childNametxt"
        android:layout_alignLeft="@+id/childNametxt"
        android:layout_alignStart="@+id/childNametxt"
        android:layout_marginTop="21dp"
        android:id="@+id/childAgetxt" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childAgetxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="33dp"
        android:id="@+id/submitBT"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:onClick="onClick_ViewChild" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="77dp"
        android:id="@+id/childNametxt"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/submitBT"
        android:layout_alignLeft="@+id/submitBT"
        android:layout_alignStart="@+id/submitBT"
        android:layout_marginBottom="24dp"
        android:id="@+id/childNameEdittxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/childAgetxt"
        android:layout_alignLeft="@+id/childNameEdittxt"
        android:layout_alignStart="@+id/childNameEdittxt"
        android:id="@+id/childAgeeditText" />

</RelativeLayout>
